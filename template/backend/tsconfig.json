{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "egg"]
  },
  "include": [
    "app/**/*.ts",
    "config/**/*.ts",
    "typings/**/*.d.ts",
    "app.ts"
  ]
}